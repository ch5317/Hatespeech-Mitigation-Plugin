{
  "manifest_version": 2,
  "name": "HateGate",
  "version": "1.0",

  "description": "A hatespeech detection and mitigation extension",

  "background": {
    "scripts": ["src/background.js"]
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "*://hatespeech1-7pf5lyxsqq-ew.a.run.app/",
    "*://mpymvmyfh0.execute-api.us-east-1.amazonaws.com/default/saveIncorrectHatespeech",
    "*://main.fm6pxzwu77.eu-west-2.elasticbeanstalk.com/*",
    "*://localhost:8081/*"
  ],

  "browser_action": {
    "default_title": "HateGate",
    "default_popup": "src/popup/options.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/getText.js"],
      "run_at": "document_start",
      "css": ["src/style.css"]
    }
  ],

  "applications": {
    "gecko": {
      "id": "hatespeech@group_project"
    }
  },

  "icons": {
    "48": "icons/gate48.png",
    "96": "icons/gate96.png"
  },

  "options_ui": {
    "page": "src/popup/settings.html"
  }
}
