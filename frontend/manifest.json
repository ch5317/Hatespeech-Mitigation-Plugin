{

    "manifest_version": 2,
    "name": "HateSpeech",
    "version": "1.0",

    "description": "A hatespeech detection and mitigation extension",

    "permissions": [
        "activeTab",
        "storage",
        "*://127.0.0.1/*"
    ],

    "browser_action": {
        "default_title": "HateSpeech",
        "default_popup": "popup/options.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js" : ["getText.js"],
        "run_at" : "document_start"
      }
    ],

    "applications": {
      "gecko": {
        "id": "hatespeech@group_project"
      }
    }
}
